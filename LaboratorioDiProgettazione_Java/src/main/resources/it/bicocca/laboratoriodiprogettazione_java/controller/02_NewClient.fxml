<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="window" prefHeight="550.0" prefWidth="500.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.bicocca.laboratoriodiprogettazione_java.controller.NewClientController">
    <children>
        <Pane prefHeight="550.0" prefWidth="500.0" stylesheets="@../css/style.css">
            <children>
                <Label layoutX="50.0" layoutY="100.0" stylesheets="@../css/style.css" text="Nome" textFill="WHITE">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <TextField fx:id="TextFieldClientName" layoutX="225.0" layoutY="100.0" prefHeight="25.0" prefWidth="230.0" promptText="Nome Cliente" stylesheets="@../css/style.css" />

                <Label layoutX="50.0" layoutY="150.0" stylesheets="@../css/style.css" text="Cognome" textFill="WHITE">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <TextField fx:id="TextFieldClientSurname" layoutX="225.0" layoutY="150.0" prefHeight="27.0" prefWidth="230.0" promptText="Cognome Cliente" />

                <Label layoutX="50.0" layoutY="200.0" stylesheets="@../css/style.css" text="E-mail" textFill="WHITE">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <TextField fx:id="TextFieldClientEmail" layoutX="225.0" layoutY="200.0" prefHeight="27.0" prefWidth="230.0" promptText="E-mail Cliente" />

                <Label layoutX="50.0" layoutY="250.0" stylesheets="@../css/style.css" text="Telefono" textFill="WHITE">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <TextField fx:id="TextFieldClientNumber" layoutX="225.0" layoutY="250.0" prefHeight="27.0" prefWidth="230.0" promptText="Numero di Telefono Cliente" stylesheets="@../css/style.css" />

                <Label fx:id="label" layoutX="47.0" layoutY="21.0" stylesheets="@../css/style.css" text="Inserisci Nuovo Cliente" textFill="WHITE">
                    <font>
                        <Font size="38.0" />
                    </font>
                </Label>

                <Button fx:id="buttonDelete" layoutX="50.0" layoutY="450.0" mnemonicParsing="false" onAction="#DeleteButton" prefHeight="51.0" prefWidth="136.0" stylesheets="@../css/style.css" text="Annulla" textFill="WHITE">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Button>

                <Button fx:id="button" layoutX="319.0" layoutY="450.0" mnemonicParsing="false" onAction="#InsertClientButton" prefHeight="51.0" prefWidth="136.0" text="Inserisci" textFill="WHITE">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Button>
            </children>
        </Pane>
    </children>


</AnchorPane>
